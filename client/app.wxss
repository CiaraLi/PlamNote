/**app.wxss**/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.fl {
  width: auto;
  float: left;
}

.fr {
  width: auto;
  float: right;
}

.hidetext {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

input, button {
  background-color: #fff;
  margin: 10px;
  text-align: center;
}

input.text {
  border-radius: 5px;
}
.hidden{
  display: none;
}