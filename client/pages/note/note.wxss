/**note.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.group-bunner {
  border-bottom: solid 1px;
  border-bottom-color: #fff;
}

.group-text {
  width: 500rpx;
}

.btn-addgroup {
  width: 150rpx;
  height: 50rpx;
  border-radius: 3px;
  font-size: 12px;
}

.group-box {
  margin: 5rpx;
}

.group {
  display: inline-block;
  width: 350rpx;
  height: 80rpx;
  margin: 10rpx;
  border-radius: 10rpx;
  background-color: rgba(107, 225, 255, 0.507);
}

.group-title {
  margin-top: 20rpx;
  width: 280rpx;
  vertical-align: buttom;
  color: #3e3e3e;
}

.group-upname {
  position: fixed;
  margin : 3rpx;
  width: 340rpx; 
  height: 70rpx;
  color: #3e3e3e;
  background: #fdfdfd;
}

.group-num {
  margin: 10rpx 10rpx 0 0;
  padding: 10rpx;
  width: 40rpx;
  vertical-align: center;
  background-color: #fff;
  border-radius: 50%;
}
